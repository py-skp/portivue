# --- Backend app secrets/config ---
SESSION_SECRET=change_me_for_prod
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_DOMAIN=localhost

# --- DB (Compose uses service name "db") ---
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/finlytics

# --- CORS (frontend in Compose publishes at http://localhost:3000) ---
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]

# --- Open Exchange Rates (optional but recommended for FX) ---
# Create a free key at https://openexchangerates.org/
OXR_APP_ID=get_your_key_from_OXR

# --- Google OAuth (optional right now; keep empty or set your local credentials) ---
GOOGLE_CLIENT_ID=get_your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=get_your_client_secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_REDIRECT_URI: http://localhost:3000/auth/google/callback
APP_ORIGIN: http://localhost:3000

# CORS (either JSON or CSV)
# or:
# CORS_ORIGINS_CSV=http://localhost:3000,https://yourdomain.com

SCHEDULER_ENABLED=true
PRICE_PROVIDER=stooq        # or alphavantage
ALPHA_VANTAGE_KEY=...       # only if using alphavantage
ENABLE_YFINANCE_FALLBACK=0  # keep Yahoo paths out